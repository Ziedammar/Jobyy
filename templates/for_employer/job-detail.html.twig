{% extends 'base.html.twig' %}
      {% block nav %}

          {% include 'Inc/nav2.html.twig' %}

      {% endblock %}


{% block body %}
    <div class="clearfix" xmlns="http://www.w3.org/1999/html"></div>

    <!-- Title Header Start -->

    <section class="inner-header-title" style="background-image:url(assets/img/banner-10.jpg);">
        <div class="container">
            <h1>Offre Detail</h1>
        </div>
    </section>
    <div class="clearfix"></div>
    <!-- Title Header End -->



    <!-- Job Detail Start -->
    <section class="detail-desc">
        <div class="container white-shadow">
            {% for offre in offres %}
            <div class="row">

                <div class="detail-pic">

                    <img src="{{ asset('uploads/'~ offre.logo) }}" class="img-responsive" alt="">
                    <a href="#" class="detail-edit" title="edit" ><i class="fa fa-pencil"></i></a>
                </div>

            </div>

            <div class="row bottom-mrg">
                <div class="col-md-8 col-sm-8">
                    <div class="detail-desc-caption">
                        <h4>Offre</h4>


                        <div class="card-body">

                            <article class="advance-search-job">
                                <div class="row ">
                                    <div class="col-md-6 col-sm-6">
                                        <div class="advance-search-img-box">
                                            <img src="{{ asset('picture/'~ offre.logo) }}" class="img-responsive" alt="">
                                        </div>

                                        <div class="col-md-4 col-sm-4">
                                            <p><i class="fa fa-map-marker"></i>{{ offre.nom }}</p>
                                        </div>

                                        <ul>
                                            <li><i class="fa fa-briefcase"></i><span>{{ offre.description }}</span></li>
                                            <li><i class="fa fa-flask"></i><span class="tg-themetag tg-featuretag">{{ offre.idcategorie.nom }}</span></li>

                                        </ul>
                                        <div class="col-md-4 col-sm-4">
                                            <div class="advance-search-job-locat">
                                                <p><i class="fa fa-map-marker"></i>{{ offre.title }}</p>
                                            </div>
                                        </div>
                                        <div class="col-md-2 col-sm-2">
                                            <p><i class="fa fa-map-marker"></i>{{ offre.email }}</p>
                                        </div>

                                    </div>
                                </div>
                        </div>
                        </article>


                        {% endfor %}


                        <div class="row no-padd">
                            <div class="detail pannel-footer">


                                <div class="col-md-7 col-sm-7">
                                    <div class="detail-pannel-footer-btn pull-right">
                                        <a href="#" class="footer-btn grn-btn" title="">Quick Apply</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        </div>
    </section>





{% endblock %}