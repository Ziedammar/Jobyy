


{% extends 'admin/base.html.twig' %}
{% block nav %}
    {% include 'admin/include/navbar.html.twig' %}
{% endblock %}
{% block sidebar %}
    {% include 'admin/include/sidebar.html.twig' %}
{% endblock %}


{% block body %}










<div class="content-page">
    <div class="container-fluid">

        <div class="row row-eq-height">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card mm-border-radius-20">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-12 mb-3">
                                        <h5 class="text-primary card-title"><i class="ri-pencil-fill"></i> Add an Admin</h5>
                                    </div>
                                    {{ form_start(form) }}
                                    <div class="col-md-12 col-sm-12">
                                        {{ form_row(form.email) }}
                                    </div>
                                    <div class="col-md-12 col-sm-12">
                                        {{ form_row(form.password) }}
                                    </div>

                                    <div class="col-md-12 col-sm-12">
                                        <button type="submit" class="btn btn-primary">Add</button>
                                    </div>
                                    {{ form_end(form) }}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>



</div>
</div>
 {% endblock %}