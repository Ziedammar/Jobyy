
{% extends 'admin/base.html.twig' %}
{% block nav %}
    {% include 'admin/include/navbar.html.twig' %}
{% endblock %}
{% block sidebar %}
    {% include 'admin/include/sidebar.html.twig' %}
{% endblock %}


{% block body %}






    <div class="content-page">
        <div class="container-fluid">
            <div class="row">

                <div class="col-xl-9 col-lg-8">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between">
                            <div class="header-title">
                                <h4 class="card-title">New Categorie</h4>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="new-user-info">
                                {{ form_start(form,{'attr':{'novalidate':'novalidate'}}) }}
                                <div class="row">
                                    <div class="form-group col-md-6">
                                        {{ form_row(form.nom, {"attr" : {'class':'form-control'},"label":"Nom Categorie"})}}
                                    </div>
                                    <div class="form-group col-md-6">

                                        {{ form_row(form.type, {"attr" : {'class':'form-control'},"label":"Type Categorie"})}}
                                    </div>
                                    <div class="form-group col-md-6">

                                        {{ form_row(form.color, {"attr" : {'class':'form-control'},"label":"Color Categorie"})}}
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-primary">Modify Categorie</button>
                                {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>

{% endblock %}