{% extends 'admin/base.html.twig' %}
{% block nav %}
    {% include 'admin/include/navbar.html.twig' %}
{% endblock %}
{% block sidebar %}
    {% include 'admin/include/sidebar.html.twig' %}
{% endblock %}


{% block body %}
    {% for message in app.flashes('success')%}
        <div class="alert alert-success">
            {{ message }}
        </div>

    {% endfor%}



    <div class="content-page">
        <div class="container-fluid">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card">
                        <div class="card-header d-flex justify-content-between">
                            <div class="header-title">
                                <h4 class="card-title">Liste des Categories des Offres</h4>
                                <a href="/stats"><button class="btn-dark">Show Stats</button></a>
                            </div>


                        </div>
                        <div class="card-body">
                            <div class="collapse" id="datatable-1">
                                <div class="card"><kbd class="bg-dark"><pre id="bootstrap-datatables" class="text-white"><code>

                                </code></pre></kbd></div>
                            </div>
                            <div class="table-responsive">
                                <table id="datatable" class="table data-table table-striped table-bordered" >
                                    <thead>
                                    <tr>
                                        <th>Nom </th>
                                        <th>Logo</th>
                                        <th>Action</th>

                                    </tr>
                                    </thead>
                                    {% set value = 0 %}
                                    {% for categorie in categorieoffres %}
                                        {% set value = value+1 %}
                                        <tr>
                                            <td>{{ categorie.nom }}</td>
                                            <td><img src="{{ asset('/picture/' ~ categorie.logo) }}"width="130" height="130"></td>
                                            <td>
                                                <a href="{{ path('categorieoffre_delete',{'id':categorie.id}) }}" > <button class="btn-dark" >Delete</button></a>
                                                <a href="{{ path('categorieoffre_edit', {'id': categorie.id}) }}"> <button class="btn-danger">edit</button> </a>

                                            </td>
                                        </tr>
                                    {% endfor %}
                                    <p class="text-danger"><strong><u>Il y a  {{ value }} categories </u></strong></p>


                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


{% endblock %}