{% extends 'admin/base.html.twig' %}
{% block nav %}
    {% include 'admin/include/navbar.html.twig' %}
{% endblock %}
{% block sidebar %}
    {% include 'admin/include/sidebar.html.twig' %}
{% endblock %}


{% block body %}


    <div class="content-page">
        <div class="container-fluid">
            <div class="row row-eq-height">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="card mm-border-radius-20">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-12 mb-3">
                                            <h5 class="text-primary card-title"><i class="ri-pencil-fill"></i> Compose Message</h5>
                                        </div>
                                    </div>
                                    <form class="email-form" action="{{ path('sendmailto') }}" method="POST">

                                        <div class="form-group row">
                                            <label for="subject" class="col-sm-2 col-form-label">Recepient Email:</label>
                                            <div class="col-sm-10">
                                                <input type="text"  name="email" class="form-control" value={{ rec.UserEmail }}>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="subject" class="col-sm-2 col-form-label">Subject:</label>
                                            <div class="col-sm-10">
                                                <input type="text"  name="subject" class="form-control" value={{ rec.Subject }}>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="subject" class="col-sm-2 col-form-label">Your Message:</label>
                                            <div class="col-md-10">
                                                <textarea name="message" class="textarea form-control" rows="5"></textarea>
                                            </div>
                                        </div>
                                        <div class="send-btn pl-3">
                                         <center><button type="submit" class="btn btn-primary">Send</button></center>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>


{% endblock %}